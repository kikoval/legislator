<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="{{ asset('css/normalize.css') }}" />
        <link rel="stylesheet" href="{{ asset('css/foundation.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('css/app.css') }}" />
    </head>
    <body>
    <nav class="top-bar">
        <ul class="title-area">
            <li class="name">
                <h1><a href="{{ path('legislator_homepage') }}">Legislator</a></h1>
            </li>
        </ul>
        <section class="top-bar-section">
    	<ul class="right">
    		{% if app.user %}
    		<li><a href="{{ path('legislator_user_my_comments') }}">My Comments</a></li>
    		<li class="divider"></li>
    		<li><a href="{{ path('fos_user_profile_edit') }}">Edit profile</a></li>
    		<li><a href="{{ path('fos_user_change_password') }}">Change password</a></li>
    		<li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
    		{% else %}
    		<li><a href="{{ path('fos_user_security_login') }}">Login</a></li>
    		{% endif %}
    	</ul>
        </section>
    </nav>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>

{% extends "::base.html.twig" %}

{% block body %}
<div class="row">
    <h2>Comment</h2>
    <div class="large-6 columns">
        <p>{{ comment.content }}</p>
    </div>
    <div class="large-6 columns">
        <p>{{ comment.substantiation }}</p>
    </div>
</div>

<div class="row">
    <div class="large-12 columns">
    <h2>Reply</h2>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <input type="submit" name="Add reply" />
    {{ form_end(form) }}
    </div>
</div>
{% endblock %}